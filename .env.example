# OLLAMA Chat Environment Configuration
# Copy this file to .env and modify values as needed

# Flask Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Security Configuration
# IMPORTANT: Generate a secure secret key for production!
# Use: python -c "import secrets; print('SECRET_KEY=' + secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Database Configuration
# For development, SQLite is fine. For production, use PostgreSQL/MySQL
DATABASE_URL=sqlite:///chat.db

# OLLAMA Server Configuration
DEFAULT_OLLAMA_HOST=http://localhost:11434

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_CONSOLE=true

# Rate Limiting Storage (optional)
# For production, use Redis: redis://localhost:6379
RATELIMIT_STORAGE_URL=memory://

# Session Configuration
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Development-specific settings
DEVELOPMENT_MODE=true
